
import spacy
from spacy import displacy
nlp = spacy.load("en_core_web_sm")
piano_class_text = (
    "He plays football every Sunday."
"She loves eating chocolate ice cream."
"The train arrived late yesterday."
"He is studying computer science in college."
"Her favorite color is blue."
"They are watching a movie tonight."
"He bought a new smartphone last week."
"She sings beautifully on stage."
"The library closes at 8 p.m."
"Her brother lives in Canada."
"They are planning a picnic this weekend."
"The moon looks bright in the sky."
)
piano_class_doc = nlp(piano_class_text)
for ent in piano_class_doc.ents:
    print(
        f"""
ent.text = {ent.text}
ent.start_char = {ent.start_char}
ent.end_char = {ent.end_char}
ent.label_ = {ent.label_}
spacy.explain('{ent.label_}') = {spacy.explain(ent.label_)}
"""
    )
displacy.serve(piano_class_doc,Â style="ent")
